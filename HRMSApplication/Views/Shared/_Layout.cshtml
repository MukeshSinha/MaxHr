@{
    Layout = null;
    var basePath = Context.Request.PathBase.ToString(); // dynamically detects /school1 etc.
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Maxpay</title>

    <!-- Important: dynamic base path for routing and asset URLs -->
    <base href="@basePath/" />

    <!-- React CSS -->
    <link rel="stylesheet" href="static/css/style.css" />
</head>
<body>
    <!-- React will mount here -->
    <div id="root"></div>

    <!-- Optional: fallback for ASP.NET Core Views -->
    @RenderBody()

    <!-- React bundle -->
    <script type="module" src="static/js/main.js"></script>
</body>
</html>
